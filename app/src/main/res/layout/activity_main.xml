<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sachu.task_haqdarshak.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_pic"/>
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            android:layout_weight=".5"/>

        <EditText
            android:id="@+id/name"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:hint="name"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:textSize="15dp"
            android:layout_weight=".5"/>

        <EditText
            android:id="@+id/sex"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:hint="sex"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="15dp"
            android:layout_weight=".5"/>

        <EditText
            android:id="@+id/age"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:hint="name"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15dp"
            android:layout_weight=".5"/>

        <EditText
            android:id="@+id/email"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:hint="email"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mob_No"
            android:textSize="15dp"
            android:layout_weight=".5"/>

            <EditText
                android:id="@+id/mob_no"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:hint="mobile no"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15dp"
            android:layout_weight=".5"/>

        <EditText
            android:id="@+id/password"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:hint="password"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

    </LinearLayout>

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:text="Signup"
            android:id="@+id/signup"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="15dp"
             />

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:text="Login"
            android:id="@+id/login"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
